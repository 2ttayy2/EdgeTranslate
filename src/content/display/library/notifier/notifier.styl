/**
 * style for notifier container
 * export to select.styl
 */
#edge-translate-notifier-container {
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
	position: fixed;
	top: 0;
	z-index: 10000001;
	pointer-events: none;
}

.edge-translate-notifier-center {
	left: 0;
	right: 0;
}

.edge-translate-notifier-left {
	left: 5vw;
}

.edge-translate-notifier-right {
	right: 5vw;
}
